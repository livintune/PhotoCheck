int main (){
init (0);
take_picture();

for(int i = 0; i < 16; i++){
whiteValue = get_pixel(i*20, 120, 3);

if(whiteValue > 127){
whiteOrBlack[i] = 1;
}
else{
whiteOrBlack[i] = 0;
}
}
for(int i=0;i<15;i++){
if( (whiteOrBlack[i]==0) && (whiteOrBlack[i+1]==1) ){
int startOfWhite = i;
}

if( (whiteOrBlack[i] == 1) && (whiteOrBlack[i + 1] == 0) ){ 
int endOfWhite = i;
}
}

